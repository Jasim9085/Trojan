<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Control Panel"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDeviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Initializing..."
        android:textIsSelectable="true"
        android:background="#ECECEC"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnOpenAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="1. Open Accessibility Settings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Find 'trojan' in the list and turn it ON."/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Local Actions"
        android:textSize="20sp"
        android:layout_marginTop="32dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnTestLock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="2. Test Lock Command"/>

    <!--
        THIS IS THE BUTTON THAT HAS BEEN FIXED.
        The typo 'android.layout_height' is now correctly 'android:layout_height'.
    -->
    <Button
        android:id="@+id/btnTestShutdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="3. Test Shutdown Command"/>

</LinearLayout>
